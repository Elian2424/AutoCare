<main class=" container form-signin heading-restore">

    <form method="POST" action="/Admin/RestorePass">

            <div class="image-login">
                <img src="/Assets/img/Adm.jpg" alt="" width="120px" height="100px">
            </div>
            <div >

            <h1 class="title h3 mb-3 fw-normal" style="color: white;">Email Verify</h1>
            <p style="color: white;"> A verification code will be sent to your email to verify that you are the owner of the account.</p>
            </div>
        <div class="form-floating">
        
                <div class="input-code">
                    <label for="floatingInput " style="color: white;">Insert your Email </label>
                    <input type="email" class="form-control " id="floatingInput" placeholder="name@example.com" name="correo">
                </div>
            
            
            <span class="text-danger">{{Message}}</span>
            <br>
            <br>

            <button class="w-100 btn btn-lg btn-primary" type="submit" {{#if visible}} hidden {{/if}}>Send
                code</button>
            <br>
        </div>

    </form>
</main>




