<main class=" container form-signin heading-restore">
    <form method="POST" action="/Admin/Verify" >
        <div class="image-login">
            <img src="/Assets/img/Adm.jpg" alt="" width="120px" height="100px">
        </div>
        <div>

            <h1 class="title h3 mb-3 fw-normal" style="color: white;">Email Confirm </h1>
            <p style="color: white;">Insert the code that we send you to the mail:  {{correo}}  </p>
        </div>
        <div class="form-floating">
            <div class="input-code">
                <label for="floatingPassword"  style="color: white;">Code verification:</label>
                
                <input type="text" class="form-control" id="floatingPassword" placeholder="Insert The Code Here" name="codigo" value="{{Code}}">
            </div>
            
            
        </div>
            <span class="text-danger">{{Message}}</span>
            <br>
            <br>
        <button class="w-100 btn btn-lg btn-primary" type="submit" >Confirm</button>

    </form>
</main>